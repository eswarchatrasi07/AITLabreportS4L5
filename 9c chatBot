from openai import OpenAI
import gradio as gr

client = OpenAI(api_key="sk-your_api_key_here")

messages = [
    {"role": "system", "content": "You are a financial expert that specializes in real estate investment and market negotiation."}
]

def customChatGPT(user_input):
    messages.append({"role": "user", "content": user_input})
    response = client.chat.completions.create(
        model="gpt-3.5-turbo",
        messages=messages
    )
    reply = response.choices[0].message.content
    messages.append({"role": "assistant", "content": reply})
    return reply

demo = gr.Interface(fn=customChatGPT, inputs="text", outputs="text", title="ChatGPT Financial Assistant")
demo.launch(share=True)
